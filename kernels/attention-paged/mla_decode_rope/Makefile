# MLA Decode with RoPE - HipKittens Kernel Makefile

GPU_TARGET ?= CDNA4
TARGET = mla_decode_kernel
SRC = kernel.cpp

MLA_KV_LORA_RANK ?= 512
MLA_QK_ROPE_DIM ?= 64
MLA_NUM_HEADS ?= 128
MLA_BLOCK_N ?= 32
MLA_BLOCK_H ?= 16
MLA_NUM_KV_SPLITS ?= 8

CPPFLAGS += -DMLA_KV_LORA_RANK=$(MLA_KV_LORA_RANK)
CPPFLAGS += -DMLA_QK_ROPE_DIM=$(MLA_QK_ROPE_DIM)
CPPFLAGS += -DMLA_NUM_HEADS=$(MLA_NUM_HEADS)
CPPFLAGS += -DMLA_BLOCK_N=$(MLA_BLOCK_N)
CPPFLAGS += -DMLA_BLOCK_H=$(MLA_BLOCK_H)
CPPFLAGS += -DMLA_NUM_KV_SPLITS=$(MLA_NUM_KV_SPLITS)

ROCM_INSTALL_DIR := $(ROCM_PATH)
HIP_INCLUDE_DIR  := $(ROCM_INSTALL_DIR)/include/hip
HIPCXX ?= $(ROCM_INSTALL_DIR)/bin/hipcc

ifeq ($(GPU_TARGET),CDNA2)
HIPFLAGS += -DKITTENS_CDNA2 --offload-arch=gfx90a
else ifeq ($(GPU_TARGET),CDNA3)
HIPFLAGS += -DKITTENS_CDNA3 --offload-arch=gfx942
else ifeq ($(GPU_TARGET),CDNA4)
HIPFLAGS += -DKITTENS_CDNA4 --offload-arch=gfx950 -DHIP_ENABLE_WARP_SYNC_BUILTINS -ffast-math
endif

CXX_STD := c++20
ICXXFLAGS := -std=$(CXX_STD) -w
ICPPFLAGS := -I${THUNDERKITTENS_ROOT}/include -I$(HIP_INCLUDE_DIR)
ICPPFLAGS += $(CPPFLAGS)

all: $(TARGET)

$(TARGET): $(SRC)
	$(HIPCXX) $(SRC) $(HIPFLAGS) $(ICXXFLAGS) $(ICPPFLAGS) -o $(TARGET) -shared -fPIC

clean:
	rm -f $(TARGET) *.o *.so
